<% include partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">EDIT <%= blog.title %></div>
  <!-- METHOD OVERRIDE BECAUSE HTML FORMS DON'T SUPPORT PUT REQUESTS -->
  <form method="POST" class="ui form" action="/blogs/<%= blog._id %>?_method=PUT">
    <div class="field">
      <div class="label">
        Title
      </div>
      <input type="text" name="blog[title]" value="<%= blog.title %>">      
    </div>
    <div class="field">
      <div class="label">
        Image URL
      </div>
      <input type="text" name="blog[image]" value="<%= blog.image %>">      
    </div>
    <div class="field">
      <div class="label">Description</div>
      <!-- TextAreas don't have value attribute -->
      <textarea name="blog[body]"><%= blog.body %></textarea>       
    </div>
    <input class="ui green basic big button" type="submit">
  </form>
</div>

<% include partials/footer %>